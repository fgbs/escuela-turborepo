{
  "name": "escuela",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "turbo run dev --filter=web",
    "web:build": "turbo run build --filter=web",
    "web:start": "turbo run start --filter=web",
    "web:lint": "turbo run lint --filter=web",
    "escuela:dev": "turbo run dev --filter=escuela",
    "escuela:build": "turbo run build --filter=escuela",
    "escuela:start": "turbo run start --filter=escuela",
    "escuela:lint": "turbo run lint --filter=escuela",
    "admin:dev": "turbo run dev --filter=admin",
    "admin:build": "turbo run build --filter=admin",
    "admin:start": "turbo run start --filter=admin",
    "admin:lint": "turbo run lint --filter=admin"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
